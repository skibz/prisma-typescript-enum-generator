{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": false,
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
